<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0B2"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="126dp"
                android:layout_height="77dp"
                android:background="#FDA511"
                android:gravity="center"
                android:text="20 s"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="18 + 18"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/resultsTextView"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:background="#24D8AF"
                android:gravity="center"
                android:text="5/18"
                android:textSize="36sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="setButton1"
                android:text="Button"
                android:textColor="#151414"
                android:textSize="36sp"
                android:textStyle="bold"
                app:backgroundTint="#DE41EF"
                app:cornerRadius="0dp"
                app:elevation="0dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="setButton2"
                android:text="Button"
                android:textColor="#151414"
                android:textSize="36sp"
                android:textStyle="bold"
                app:backgroundTint="#13E8D7"
                app:cornerRadius="0dp"
                app:elevation="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="329dp"
            android:layout_height="89dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="setButton3"
                android:text="Button"
                android:textColor="#151414"
                android:textSize="36sp"
                android:textStyle="bold"
                app:backgroundTint="#EA4A4A"
                app:cornerRadius="0dp"
                app:elevation="0dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="setButton4"
                android:text="Button"
                android:textColor="#151414"
                android:textSize="36sp"
                android:textStyle="bold"
                app:backgroundTint="#9AE422"
                app:cornerRadius="0dp"
                app:elevation="0dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/wcTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Correct :)"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:onClick="setGoButton"
        android:text="GO!"
        android:textSize="60sp"
        app:backgroundTint="#B2DFDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="setResetButton"
        android:text="Play Again"
        android:visibility="gone"
        app:backgroundTint="#C8E6C9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wcTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>